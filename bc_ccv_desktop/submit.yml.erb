---
batch_connect:
  template: vnc
script:
  native: [
          "-N <%= bc_num_slots %>",
          "-n <%= num_cores %>",
          "--partition=<%= sh_queue %>",
          <%- if sh_queue =~ /gpu|gcondo/ -%>
          "--gres=gpu:<%= num_gpus %>",
          <%- end -%>
          "--mem=<%= sh_mem %>GB",
          <%- if reservation.length >0  -%>
          "--reservation=<%= reservation %>"
          <%- end -%>
          <%- if features.length >0  -%>
          "--constraint=<%= features %>"
          <%- end -%>
          ]
