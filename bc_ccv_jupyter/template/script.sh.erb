#!/usr/bin/env bash

# Benchmark info
echo "TIMING - Starting main script at: $(date)"

# Set working directory to home directory
cd "${HOME}"

#
# Start Jupyter Notebook Server
#
# load the required conda module
source <%=context.jupyter_path%>/activate

<%- unless context.conda_env.blank? -%>
conda activate <%=context.conda_env%>
<%- end -%>

<%- unless context.modules.blank? -%>
# Purge the module environment to avoid conflicts
module unload java/8u111 matlab/R2017b python/2.7.12 intel/2017.0 

# Load the require modules
module load <%=context.modules%>

# List loaded modules
#module list
<%- end -%>

# Benchmark info
echo "TIMING - Starting jupyter at: $(date)"

# Launch the Jupyter Notebook Server
set -x
#export PATH=<%=context.jupyter_path%>:$PATH
jupyter notebook --config="${CONFIG_FILE}" <%= context.extra_jupyter_args %>
