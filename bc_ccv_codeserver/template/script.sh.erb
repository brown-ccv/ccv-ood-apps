#!/usr/bin/env bash

code_server_version=context.version

CODE_SERVER_DATAROOT="$HOME/.local/share/code-server"
mkdir -p "$CODE_SERVER_DATAROOT/extensions"

echo " Print ENV "
printenv | grep SLURM

# Benchmark info
echo "TIMING - Starting main script at: $(date)"

# Set working directory to home directory
cd "${HOME}"

#
# Start VSCode Server
#

# Purge the module environment to avoid conflicts
module unload java/8u111 matlab/R2017b python/2.7.12 intel/2017.0


<%- unless context.modules.blank? -%>
# Load the require modules
module load <%=context.modules%>
<%- end -%>

module load code-server/4.11.0

# Benchmark info
# List loaded modules
module list
echo "TIMING - Starting jupyter at: $(date)"

# Launch the VSCode Server
set -x
code-server \
    --auth="password" \
    --bind-addr="0.0.0.0:${port}" \
    --disable-telemetry \
    --ignore-last-opened \
    --user-data-dir="$CODE_SERVER_DATAROOT" \
    --log debug 